{
  "name": "kanbrawl",
  "version": "0.0.0-development",
  "description": "A minimal live kanban board for AI agents, powered by MCP",
  "type": "module",
  "license": "MIT",
  "author": "sinedied",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/kanbrawl.git"
  },
  "homepage": "https://github.com/sinedied/kanbrawl",
  "bugs": {
    "url": "https://github.com/sinedied/kanbrawl/issues"
  },
  "keywords": [
    "kanban",
    "board",
    "mcp",
    "ai",
    "agents",
    "model-context-protocol"
  ],
  "main": "dist/server/index.js",
  "bin": {
    "kanbrawl": "dist/server/index.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:server": "tsc",
    "build:client": "vite build src/client",
    "build": "npm run build:server && npm run build:client",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:client": "vite dev src/client",
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "start": "node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "release:check": "semantic-release --dry-run"
  },
  "engines": {
    "node": ">=22"
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branch": "main"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "express": "^5.1.0",
    "lit": "^3.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.2",
    "semantic-release": "^24.2.9",
    "semantic-release-npm-github": "^6.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  }
}
